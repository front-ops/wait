    width: 100%;
    overflow: hidden;
    position: relative;
    background: linear-gradient(193.78deg, #000000 25%, #000933 60%, #000000 90%);
  }
  .spline-viewer {
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .kpi-container {
    padding-top: 60px;
    padding-bottom: 60px;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }

  .kpi-header {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    font-weight: 300;
    font-size: 20px;
    line-height: 24px;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #FFFFFF;
    margin-bottom: 80px;

    @media (max-width: 768px) {
      font-size: 16px;
      line-height: 20px;
      margin-bottom: 40px;
    }
  }

  .kpi-reason {
        font-weight: 700;
        font-size: 40px;
        line-height: 48px;
        letter-spacing: 0.03em;
        text-transform: uppercase;

        @media (max-width: 768px) {
          font-size: 30px;
          line-height: 36px;
        }
  }

  .kpi-value {
        font-weight: 700;
        font-size: 240px;
        line-height: 1;
        letter-spacing: 0.03em;
        text-transform: uppercase;

        /* Gradi */
        background: linear-gradient(90deg, #FF0033 0%, #0A00DD 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;

        @media (max-width: 1024px) {
          font-size: 180px;
        }

        @media (max-width: 768px) {
          font-size: 60px;
        }
  }

  .kpi-period {
        font-weight: 700;
        font-size: 40px;
        line-height: 48px;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        margin-left: auto;

        @media (max-width: 768px) {
          font-size: 30px;
          line-height: 36px;
        }
  }

  .clients-container {
    padding-top: 60px;
    padding-bottom: 60px;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 1;
  }

  .clients-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 300;
    font-size: 14px;
    line-height: 17px;
    letter-spacing: 0.05em;
    text-transform: lowercase;
    margin-bottom: 40px;

    @media (max-width: 768px) {
      font-size: 12px;
      line-height: 15px;
      margin-bottom: 30px;
    }
  }

  .clients-list {
    display: flex;
    flex-wrap: wrap;
  }

  .client-item {
    font-size: 32px;
    line-height: 56px;
    text-transform: uppercase;
    font-weight: 700;
    margin-right: 1em;
    &:nth-child(2n) {
      font-weight: 300;
    }
    &:last-child {
      margin-right: 0;
    }
    opacity: 0; // Начальное состояние - невидимый

    @media (max-width: 1024px) {
      font-size: 28px;
      line-height: 48px;
    }

    @media (max-width: 768px) {
      font-size: 24px;
      line-height: 40px;
    }
  }
  .client-item--your-brand {
    display: block;
    vertical-align: middle;
    padding: 0 16px;
    border: 2px solid #FFFFFF;
  }
</style>
