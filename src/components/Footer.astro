---
import Socials from "./Socials.astro";
import logoText from "../assets/img/logo-text.png";
---
<div class="footer-placeholder"></div>
<footer class="footer">
    <Socials/>
    <div class="footer-container container">
        <img src={logoText.src} alt="logo" class="footer-logo">
    </div>
</footer>

<style lang="scss">
    .footer {
        background: #000;
        color: #fff;
        padding: clamp(1rem, 3vw, 2rem);
        height: 100vh;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        z-index: 0;

        @media (max-width: 768px) {
            height: auto;
            min-height: 100vh;
        }
    }

    .footer-placeholder {
        height: 100vh;
        
        @media (max-width: 768px) {
            height: auto;
            min-height: 100vh;
        }
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
    }

    .footer-logo {
        user-select: none;
        pointer-events: none;
        -webkit-user-drag: none;
        max-width: 100%;
        height: auto;
        width: clamp(200px, 30vw, 400px);
    }
</style>
